# Database Configuration
DATABASE_URL=mongodb://localhost:27017/dindin-app
# For Docker: mongodb://admin:password@localhost:27017/dindin

# Server Configuration
PORT=3000
NODE_ENV=development

# WebSocket Configuration
WS_PORT=3001

# CORS Configuration
# Multiple origins can be separated by commas
CORS_ORIGIN=http://localhost:8081,http://localhost:3000

# Authentication
BETTER_AUTH_SECRET=your-secret-key-here-change-in-production
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_COOKIE_SECURE=false

# External APIs (if needed)
SPOONACULAR_API_KEY=your-spoonacular-api-key-here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Security
JWT_SECRET=your-jwt-secret-here-change-in-production
SESSION_SECRET=your-session-secret-here-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (if needed)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Redis (for sessions/caching if needed)
REDIS_URL=redis://localhost:6379

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false